@{
    ViewData["Title"] = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ProviSys | Login</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

        <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/bower_components/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/bower_components/Ionicons/css/ionicons.css" />
        <link rel="stylesheet" href="~/dist/css/animation.css" />
        <link rel="stylesheet" href="~/dist/css/login.css" />
 
 
</head>
<body id="signin_main" class="authenty signin-main" background="~/images/ClinicaProvidencia3.jpg">
    <div class="section-content">
        <div class="wrap">
            <div class="container">
                <div class="form-wrap">
                    <div class="row">
                        <div class="title animated fadeInDown">
                            <h1>ProviSys</h1>
                            <h5>Sistema Integral de gestión administrativa</h5>
                        </div>
                        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                            <div>
                                <div class="form-header">
                                    @*<i class="fa fa-user"></i>*@
                                    <img src="~/images/logo1.jpg" alt="adminlte" />

                                </div>
                                <div class="form-main">
                                    
                                </div>
                                <div class="form-footer">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <environment names="Development">
        <script src="~/bower_components/jquery/dist/jquery.js" asp-append-version="true"></script>
        <script src="~/bower_components/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
        <script src="~/dist/js/app.js" asp-append-version="true"></script>
        <script src="~/dist/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/js/app.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
</body>
</html>